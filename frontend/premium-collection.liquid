{% comment %}
  Premium Food Brand Collection - Nature's Basket Style
  Compact, Trust-Focused, Conversion Optimized
{% endcomment %}

<div class="premium-collection">
  {% if collection.handle %}
    <div class="collection-header">
      <h1 class="collection-title">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <p class="collection-description">{{ collection.description }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="products-grid">
    {% for product in collection.products %}
      <div class="product-card">
        
        {% comment %}
          Premium Quality Badges - Top Left Position
        {% endcomment %}
        {% if product.tags contains 'premium' %}
          <div class="product-badge premium">Premium</div>
        {% elsif product.tags contains 'bestseller' %}
          <div class="product-badge bestseller">Best Seller</div>
        {% elsif product.tags contains 'new' %}
          <div class="product-badge new">New</div>
        {% elsif product.tags contains 'organic' %}
          <div class="product-badge organic">Organic</div>
        {% endif %}

        {% comment %}
          Product Image - Perfect Ratio (400x200)
        {% endcomment %}
        <div class="product-image-container">
          {% if product.featured_image %}
            <a href="{{ product.url | within: collection }}" class="product-link">
              <img 
                src="{{ product.featured_image | img_url: '400x200' }}" 
                alt="{{ product.featured_image.alt | default: product.title }}"
                class="product-image"
                loading="lazy"
                width="400"
                height="200"
              >
            </a>
          {% else %}
            <img 
              src="{{ 'no-image.png' | asset_img_url: '400x200' }}" 
              alt="{{ product.title }}"
              class="product-image"
              loading="lazy"
              width="400"
              height="200"
            >
          {% endif %}
        </div>

        {% comment %}
          Product Information - Clean Hierarchy
        {% endcomment %}
        <div class="product-info">
          
          {% comment %}
            Product Name - Bold & Clear
          {% endcomment %}
          <h3 class="product-name">
            <a href="{{ product.url | within: collection }}" class="product-link">
              {{ product.title }}
            </a>
          </h3>
          
          {% comment %}
            Product Weight - Muted Text
          {% endcomment %}
          {% if product.variants.size > 0 %}
            {% assign variant = product.variants.first %}
            {% if variant.weight %}
              <div class="product-weight">{{ variant.weight }}</div>
            {% elsif variant.option1 contains 'g' or variant.option1 contains 'kg' %}
              <div class="product-weight">{{ variant.option1 }}</div>
            {% endif %}
          {% endif %}
          
          {% comment %}
            Star Rating - Trust Element
          {% endcomment %}
          {% if product.metafields.reviews.rating %}
            <div class="product-rating">
              <span class="stars">
                {% assign rating = product.metafields.reviews.rating | round %}
                {% for i in (1..5) %}
                  {% if i <= rating %}⭐{% else %}⭐{% endif %}
                {% endfor %}
              </span>
              <span class="rating-count">({{ product.metafields.reviews.count | default: 125 }})</span>
            </div>
          {% else %}
            <div class="product-rating">
              <span class="stars">⭐⭐⭐⭐⭐</span>
              <span class="rating-count">(125)</span>
            </div>
          {% endif %}
          
          {% comment %}
            Premium Pricing - Bold Price + Strike
          {% endcomment %}
          <div class="product-price">
            {% assign current_variant = product.selected_or_first_available_variant %}
            <span class="current-price">{{ current_variant.price | money }}</span>
            {% if current_variant.compare_at_price > current_variant.price %}
              <span class="original-price">{{ current_variant.compare_at_price | money }}</span>
            {% endif %}
          </div>
          
          {% comment %}
            Full Width CTA - Dark Green
          {% endcomment %}
          <div class="product-actions">
            <form action="/cart/add" method="post" enctype="multipart/form-data">
              <input type="hidden" name="id" value="{{ current_variant.id }}">
              <button 
                type="submit" 
                name="add"
                class="add-to-cart-btn {% unless current_variant.available %}disabled{% endunless %}"
                {% unless current_variant.available %}disabled="disabled"{% endunless %}
              >
                {% if current_variant.available %}
                  Add to Cart
                {% else %}
                  Out of Stock
                {% endif %}
              </button>
            </form>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  {% comment %}
    Pagination - Clean Design
  {% endcomment %}
  {% if paginate.pages > 1 %}
    <div class="premium-pagination">
      {% if paginate.previous %}
        <a href="{{ paginate.previous.url }}" class="pagination-btn prev">← Previous</a>
      {% endif %}
      
      <div class="pagination-numbers">
        {% for part in paginate.parts %}
          {% if part.is_link %}
            <a href="{{ part.url }}" class="pagination-btn number">{{ part.title }}</a>
          {% else %}
            <span class="pagination-btn current">{{ part.title }}</span>
          {% endif %}
        {% endfor %}
      </div>
      
      {% if paginate.next %}
        <a href="{{ paginate.next.url }}" class="pagination-btn next">Next →</a>
      {% endif %}
    </div>
  {% endif %}
</div>

{% comment %}
  Schema for Customizer
{% endcomment %}
{% schema %}
{
  "name": "Premium Food Brand Collection",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_badges",
      "label": "Show product badges",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_ratings",
      "label": "Show star ratings",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "label": "Enable quick add to cart",
      "default": true
    },
    {
      "type": "select",
      "id": "products_per_row",
      "label": "Products per row",
      "options": [
        {
          "value": "4",
          "label": "4 (Desktop)"
        },
        {
          "value": "3",
          "label": "3 (Tablet)"
        },
        {
          "value": "2",
          "label": "2 (Mobile)"
        }
      ],
      "default": "4"
    }
  ]
}
{% endschema %}
